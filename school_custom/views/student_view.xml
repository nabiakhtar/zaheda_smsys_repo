    <!--    student view-->
    <record id="view_student_student_form_1_inherit11" model="ir.ui.view">
        <field name="name">view_student_student_form_1_inherit</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="school.view_student_student_form_1"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='roll_no']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
            <xpath expr="//field[@name='roll_no']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='reg_code']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[hasclass('oe_title')]" position="after">
                <group>
                    <field
                            name="father_name"
                            placeholder="Father Name"
                            attrs="{'readonly':[('state','in',['alumni','terminate'])]}"
                    />
                    <field name="reg_no"/>
                    <field name="roll_no"/>

                </group>
            </xpath>
            <xpath expr="//field[@name='country_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='website']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='maritual_status']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='roll_no']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
            <xpath expr="//field[@name='mother_tongue']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='contact_phone']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='contact_mobile']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='admission_date']" position="replace">
            </xpath>
            <xpath expr="//field[@name='year']" position="after">
                <field name="registration_date"/>
                <field name="admission_date"/>
            </xpath>
        </field>
    </record>
    <!--    list view-->
    <record id="view_student_student_tree_1_inherit" model="ir.ui.view">
        <field name="name">view_student_student_form_1_inherit</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="school.view_student_student_tree_1"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pid']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='pid']" position="before">
                <field name="reg_no"/>
                <field name="roll_no"/>
            </xpath>

        </field>
    </record>
    <!--    Student Kanban-->
    <record id="student_student_kanban_view_inherit" model="ir.ui.view">
        <field name="name">view_student_student_form_1_inherit_custom</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="school.student_student_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_kanban_box_show_onclick_trigger')]/table[hasclass('oe_kanban_table')]"
                   position="replace">
                <table class="oe_kanban_table">
                    <tr width="300">
                        <td valign="top" width="64" align="left">
                            <a type="open">
                                <img
                                        heigh="80"
                                        width="80"
                                        t-att-src="kanban_image('student.student', 'photo', record.id.raw_value)"
                                        alt="image"
                                />
                            </a>
                        </td>
                        <td
                                valign="top"
                                align="left"
                                style="padding-left:10px;"
                        >
                            <table>
                                <tr>
                                    <td>RegNo :</td>
                                    <td style="padding-left:10px;">
                                        <b>
                                            <field name="reg_no"/>
                                        </b>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Father Name :</td>
                                    <td style="padding-left:10px;">
                                        <b>
                                            <field name="father_name"/>
                                        </b>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Class :</td>
                                    <td style="padding-left:10px;">
                                        <b>
                                            <field
                                                    name="standard_id"
                                            />
                                        </b>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Date of Birth :</td>
                                    <td style="padding-left:10px;">
                                        <b>
                                            <field
                                                    name="date_of_birth"
                                            />
                                        </b>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Mobile :</td>
                                    <td style="padding-left:10px;">
                                        <b>
                                            <field name="mobile"/>
                                        </b>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </xpath>
        </field>
    </record>
