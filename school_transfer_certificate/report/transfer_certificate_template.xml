<odoo>
    <template id="report_transfer_certificate_document">
        <t t-call="web.basic_layout">
            <div class="page" style="font-family:'Times New Roman'; font-size:12pt; line-height:1.6; padding:30px;">
                <!-- ===== Header Section ===== -->

                <div style="position:relative; height:100%;">
                    <!-- Header Image -->
                    <div style="text-align:center; margin-bottom:15px;">
                        <t t-set="record" t-value="doc.env['school.school'].search([])"/>
                        <img t-att-src="image_data_uri(record.tc_header)"
                             style="width:100%; height:223px; object-fit:contain;"/>
                    </div>

                    <!-- Student Photo Overlapping Right Side -->
                    <t t-if="doc.student_id.photo">
                        <img t-att-src="image_data_uri(doc.student_id.photo or '')"
                             style="position:absolute;
                    top:50px;
                    right:40px;
                    width:100px;
                    border-radius:20px;
                    z-index:5;"/>
                    </t>
                </div>


                <!--            <center>-->
                <!--                <div style="text-align:center; font-weight:bold; font-size:14pt; margin:10px 0; border:1px solid #000; display:inline-block; padding:4px 20px;">-->
                <!--                    TRANSFER CERTIFICATE-->
                <!--                </div>-->
                <!--            </center>-->


                <div>
                    <p>TC No:
                        <span style="margin-left:20px;border-bottom:1px dotted #000; min-width:100px; display:inline-block;">
                            <t t-esc="doc.name"/>
                        </span>
                    </p>
                </div>

                <!-- ===== Body Section ===== -->
                <div style="direction: rtl;width:100%; font-size:14pt;font-family: 'Jameel Noori Nastaleeq'">
                    <div style="margin-top:15px;">
                        <div style="direction:rtl">
                            <p>رجسٹریشن نمبر:
                                <span style="text-align:center;margin-left:20px;border-bottom:1px dotted #000; min-width:150px; display:inline-block;">
                                    <t t-esc="doc.student_id.reg_no"/>
                                </span>
                                نام طالب علم :
                                <span style="text-align:center;border-bottom:1px dotted #000; min-width:300px; display:inline-block;">
                                    <t t-esc="doc.student_id.name"/>
                                </span>
                            </p>

                            <p>والد کا نام:
                                <span style="text-align:center;margin-left:20px;border-bottom:1px dotted #000; min-width:220px; display:inline-block;">
                                    <t t-esc="doc.student_id.father_name"/>
                                </span>
                                درجہ :
                                <span style="text-align:center;border-bottom:1px dotted #000; min-width:170px; display:inline-block;">
                                    <t t-esc="doc.student_id.standard_id.name"/>
                                </span>

                                سیکشن:
                                <span style="text-align:center;border-bottom:1px dotted #000; min-width:100px; display:inline-block;">
                                    <t t-esc="doc.student_id.division_id.name"/>
                                </span>
                            </p>

                        </div>
                    </div>
                </div>
                <div style="letter-spacing: 1.5px;">
                    <!--                <div style="font-family: Arial;">-->
                    <p>Student Name:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:500px; display:inline-block;">
                            <t t-esc="doc.en_student_name"/>
                        </span>
                    </p>

                    <p>Father’s Name:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:250px; display:inline-block;">
                            <t t-esc="doc.student_id.en_father_name"/>
                        </span>
                        Class:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:120px; display:inline-block;">
                            <t t-esc="doc.en_class"/>
                        </span>
                        Sec:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:60px; display:inline-block;">
                            <t t-esc="doc.en_section"/>
                        </span>
                    </p>

                    <p>Mother’s Name:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:200px; display:inline-block;">
                            <t t-esc="doc.student_id.en_mother_name"/>
                        </span>
                        Address:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:300px; display:inline-block;">
                            <t t-esc="doc.student_id.street"/>
                        </span>
                    </p>

                    <p>Nationality:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:120px; display:inline-block;">
                            INDIAN
                        </span>
                        Religion:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:280px; display:inline-block;">
                            <t t-esc="doc.student_id.cast_id.name"/>
                        </span>
                        <!--                    Subjects:-->
                        <!--                    <span style="text-align:center;border-bottom:1px dotted #000; min-width:200px; display:inline-block;">-->
                        <!--&lt;!&ndash;                        <t t-esc="doc.student_id.subjects"/>&ndash;&gt;-->
                        <!--                    </span>-->
                    </p>

                    <p>Date of Birth:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:150px; display:inline-block;">
                            <t t-esc="doc.student_id.date_of_birth"/>
                        </span>
                        Date of Admission:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:150px; display:inline-block;">
                            <t t-esc="doc.registration_date"/>
                        </span>
                    </p>

                    <p>Last Class:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:150px; display:inline-block;">
                            <t t-esc="doc.en_last_class"/>
                        </span>
                        Student is:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:120px; display:inline-block;">
                            <t t-esc="doc.fail_pass"/>
                        </span>
                    </p>

                    <p>Annual Examination last taken on:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:200px; display:inline-block;">
                            <t t-esc="doc.last_exam_date"/>
                        </span>
                        Fees Paid:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:120px; display:inline-block;">
                            <t t-esc="doc.fee_paid"/>
                        </span>
                    </p>

                    <p>Date on which student’s name was struck off:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:200px; display:inline-block;">
                            <t t-esc="doc.leave_date"/>
                        </span>
                    </p>

                    <p>Reason for leaving the school:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:550px; display:inline-block;">
                            <t t-esc="doc.reason"/>
                        </span>
                    </p>

                    <p>General Conduct:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:550px; display:inline-block;">
                            <t t-esc="doc.character"/>
                        </span>
                    </p>

                    <p>Any other remarks:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:550px; display:inline-block;">
                            <t t-esc="doc.remarks"/>
                        </span>
                    </p>

                    <p>Date of Issue of Certificate:
                        <span style="text-align:center;border-bottom:1px dotted #000; min-width:200px; display:inline-block;">
                            <t t-esc="doc.issue_date"/>
                        </span>
                    </p>
                </div>


                <!-- ===== Signature Section ===== -->
                <div style="display:flex; justify-content:flex-end; margin-top:40px;">
                    <div style="text-align:right;">
                        <p style="margin:0;">Manager / Principal</p>
                        <!--                    <p style="margin:0;">-&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;</p>-->
                        <!--                    <p style="margin:0;">-&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;</p>-->
                    </div>
                </div>
            </div>
        </t>
    </template>


    <template id="report_transfer_certificate">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="school_transfer_certificate.report_transfer_certificate_document"/>
            </t>
        </t>
    </template>

    <record id="paperformat_tc" model="report.paperformat">
        <field name="name">TC Print Format</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">2.8</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="disable_shrinking" eval="True"/>
        <field name="dpi">96</field>
    </record>


    <record id="action_report_transfer_certificate" model="ir.actions.report">
        <field name="name">Transfer Certificate</field>
        <field name="model">school.transfer.certificate</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">school_transfer_certificate.report_transfer_certificate</field>
        <field name="report_file">school_transfer_certificate.report_transfer_certificate</field>
        <field name="print_report_name">
            (object.state in ('draft','cancelled') and ('TC - %s' % (object.name))) or ('Transfer Certificate - %s' %
            (object.name))
        </field>
        <field name="binding_model_id" ref="model_school_transfer_certificate"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_tc"/>
    </record>

</odoo>
