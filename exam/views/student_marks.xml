<?xml version="1.0" encoding="utf-8" ?>

<!-- student_exam/views/student_exam_view.xml -->

<odoo>
    <record id="view_exam_form" model="ir.ui.view">
        <field name="name">student.exam.form</field>
        <field name="model">student.exam</field>
        <field name="arch" type="xml">
            <form string="Exam">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="year"/>
                        <field name="exam_date"/>
                    </group>
                    <notebook>
                        <page string="Subjects">
                            <field name="subject_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_exam" model="ir.actions.act_window">
        <field name="name">Exam</field>
        <field name="res_model">student.exam</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!--    <menuitem id="student_exam_menu" name="Student Exams" parent="menu_exam_sub_form" />-->
    <menuitem id="exam_management_menu" name="Manage Exams" parent="menu_exam_sub_form" action="action_exam"/>


    <!-- student_exam/views/student_mark_form_view.xml -->

    <record id="view_student_exam_mark_form" model="ir.ui.view">
        <field name="name">student.exam.mark.form</field>
        <field name="model">student.exam.mark</field>
        <field name="arch" type="xml">
            <form string="Student Exam Marks">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="subject_id"/>
                        <field name="marks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- student_exam/views/student_mark_tree_view.xml -->


    <record id="view_student_exam_mark_tree" model="ir.ui.view">
        <field name="name">student.exam.mark.tree</field>
        <field name="model">student.exam.mark</field>
        <field name="arch" type="xml">
            <tree>
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="marks"/>
            </tree>
        </field>
    </record>
    <record id="action_student_exam_mark" model="ir.actions.act_window">
        <field name="name">Enter Marks</field>
        <field name="res_model">student.exam.mark</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="student_exam_mark_menu" name="Enter Marks" parent="menu_exam_sub_form"
              action="action_student_exam_mark"/>

</odoo>
