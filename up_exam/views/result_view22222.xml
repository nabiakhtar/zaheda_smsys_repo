<odoo>
    <template id="report_card_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">

                <div style="padding:15px;font-family:'Arial';border:1px solid #000;">

                    <!-- Header -->
                    <div style="text-align:center;">
                        <h2 style="margin:0;">IQRA PUBLIC SCHOOL</h2>
                        <p>(Affiliated to C.B.S.E Delhi)</p>
                        <p>
                            <strong>Idgah Road, Mundiayr</strong>
                        </p>
                    </div>

                    <div style="display:flex;justify-content:space-between;margin-top:10px;">
                        <div>
                            <p>Affiliation No : 2130603</p>
                            <p>School Code : 70134</p>
                            <!--                            <p>Email : <t t-esc="doc.school_id.email"/></p>-->
                        </div>

                        <div>
                            <img t-if="doc.image_1920"
                                 t-att-src="image_data_uri(doc.image_1920)"
                                 style="width:120px;height:150px;border:1px solid #000;object-fit:cover;"/>
                        </div>
                    </div>

                    <h3 style="text-align:center;margin-top:10px;background:#009933;color:#fff;padding:5px;">
                        REPORT CARD | SESSION :
                        <!--                        <t t-esc="doc.session"/>-->
                    </h3>

                    <!-- Student Details -->
                    <table style="width:100%;border-collapse:collapse;margin-top:10px;font-size:13px;">
                        <tr>
                            <td>
                                <strong>Admission No:</strong>
                                <t t-esc="doc.admission_no"/>
                            </td>
                            <td>
                                <strong>Roll No:</strong>
                                <!--                                <t t-esc="doc.roll_no"/>-->
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong>Student's Name:</strong>
<!--                                <t t-esc="doc.name"/>-->
                            </td>
                            <td>
                                <strong>Class:</strong>
<!--                                <t t-esc="doc.class_id.name"/>-->
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong>Mother's Name:</strong>
<!--                                <t t-esc="doc.mother_name"/>-->
                            </td>
                            <td>
                                <strong>Date of Birth:</strong>
<!--                                <t t-esc="doc.dob"/>-->
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong>Father's Name:</strong>
<!--                                <t t-esc="doc.father_name"/>-->
                            </td>
                            <td>
                                <strong>Contact No:</strong>
<!--                                <t t-esc="doc.mobile"/>-->
                            </td>
                        </tr>
                    </table>

                    <!-- Marks Table -->
                    <h4 style="margin-top:10px;background:#009933;color:white;padding:4px;">Academic Performance</h4>

                    <table style="width:100%;border-collapse:collapse;text-align:center;font-size:12px;">
                        <tr style="background:#ccc;">
                            <th rowspan="2">Subject</th>
                            <th colspan="4">TERM-I (100)</th>
                            <th colspan="4">TERM-II (100)</th>
                            <th rowspan="2">TOTAL (200)</th>
                            <th rowspan="2">GRADE</th>
                        </tr>

                        <tr style="background:#ccc;">
                            <th>PT</th>
                            <th>NB</th>
                            <th>SE</th>
                            <th>Exam</th>
                            <th>PT</th>
                            <th>NB</th>
                            <th>SE</th>
                            <th>Exam</th>
                        </tr>

                        <t t-foreach="doc.student_marks_ids" t-as="line">
                            <tr>
                                <td>
                                    <t t-esc="line.subject_id.name"/>
                                </td>

                                <!-- TERM I -->
                                <td>
                                    <t t-esc="line.mo1"/>
                                </td>
                                <td>
                                   <t t-esc="line.mo1"/>
                                </td>
                                <td>
                                   <t t-esc="line.mo1"/>
                                </td>
                                <td>
                                   <t t-esc="line.mo1"/>
                                </td>

                                <!-- TERM II -->
                                <td>
                                  <t t-esc="line.mo1"/>
                                </td>
                                <td>
                                   <t t-esc="line.mo1"/>
                                </td>
                                <td>
                                   <t t-esc="line.mo1"/>
                                </td>
                                <td>
<!--                                    <t t-esc="line.term2_exam"/>-->
                                    <t t-esc="line.mo1"/>
                                </td>

                                <td>
<!--                                    <t t-esc="line.total_marks"/>-->
                                    <t t-esc="line.mo1"/>
                                </td>
                                <td>
<!--                                    <t t-esc="line.grade"/>-->
                                    <t t-esc="line.mo1"/>
                                </td>
                            </tr>
                        </t>

                    </table>

                    <!-- Result Summary -->
                    <h4 style="margin-top:10px;background:#009933;color:white;padding:5px;">
                        OVERALL :
<!--                        <t t-esc="doc.total_marks"/>-->
<!--                        /-->
<!--                        <t t-esc="doc.total_outof"/>-->
<!--                        &nbsp; Percentage:<t t-esc="doc.percentage"/>%-->
                    </h4>

                    <!-- Remarks -->
                    <p>
                        <strong>Teacher's Remarks:</strong>
<!--                        <t t-esc="doc.remarks"/>-->
                    </p>
                    <p>
                        <strong>Result:</strong>
<!--                        <t t-esc="doc.final_result"/>-->
                    </p>

                    <div style="display:flex;justify-content:space-between;margin-top:20px;">
                        <div>Class Teacher</div>
                        <div>Principal</div>
                    </div>

                </div>

            </t>
        </t>
    </template>


    <report
            id="action_student_report_card"
            model="student.student"
            string="Student Report Card"
            report_type="qweb-pdf"
            name="up_exam.report_card_template"
            file="up_exam.report_card_template"
            print_report_name="'Report Card - %s' % (object.name)"
    />



</odoo>
