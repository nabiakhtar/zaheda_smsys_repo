        <field name="res_model">exam.result</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'group_by': ['exam_id', 'class_id']}</field>
    </record>


<!--    server action-->
   <record id="action_cal_results" model="ir.actions.server">
            <field name="name">Calculate Result</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="up_exam.model_exam_result"/>
            <field name="binding_model_id" ref="up_exam.model_exam_result"/>
            <field name="binding_view_types">list</field>
            <field name="code">
                records.cal_result()
            </field>
        </record>

