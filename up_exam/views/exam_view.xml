    <!--====================== Exam Result =========================================-->
    <!-- Form View Of Result Information -->
    <record id="view_exam_result_form" model="ir.ui.view">
        <field name="name">exam.results.form</field>
        <field name="model">exam.result</field>
        <field name="arch" type="xml">
            <form string="Results" create="false">
                <header>
                    <field
                            name="state"
                            string="State"
                            widget="statusbar"
                            statusbar_visible="draft,confirm"
                            readonly="1"
                    />

                    <button name="cal_result" string="Calculate" type="object"/>
                    <button name="re_cal_result" string="Re-Calculate" type="object"/>

                </header>
                <sheet>

                    <group>
                        <separator string="Student Details" colspan="4"/>
                        <group col="2">
                            <field name="reg_no" readonly="1" string="Registration No"/>
                            <field
                                    name="student_id"
                                    placeholder="Select Student"
                                    context="{}"
                                    options="{'no_create': True, 'no_open': True}"
                            />
                            <field name="mother_name"/>
                            <field name="father_name"/>
                            <field name="is_cald"/>

                        </group>
                        <group col="2">
                            <field name="roll_no" readonly="1" string="Roll No"/>
                            <field name="class_id"/>
                            <field name="dob"/>
                            <field name="contact_no"/>
                            <field name="exam_id"/>
                        </group>
                    </group>
                    <field name="student_marks_ids" nolabel="1" colspan="4">
                        <tree create="false" delete="false">
                            <field
                                    name="subject_id"
                                    placeholder="Select Subject"
                                    options="{'no_create': True, 'no_open': True}"
                            />
                            <field name="t_mo1"/>
                            <field
                                    name="mo1"
                            />
                            <field name="t_mo1"/>
                            <field
                                    name="mo2"
                            />
                            <field
                                    name="grace_mark"
                            />
                            <field name="total_mark_max"/>
                            <field
                                    name="total_mark"
                                    string="Totals"
                            />
                            <field name="state" invisible="1"/>

                        </tree>

                    </field>
                    <group >
                        <group>
                            <field name="total" readonly="1"/>
                            <field name="total_max" readonly="1"/>

                            <field name="percentage" string="Percentage" readonly="1"/>
                            <field name="division" string="Division" readonly="1"/>
                        </group>
                        <group>
                            <field name="result" string="Result" readonly="1"/>
                            <field name="position" string="Position" readonly="1"/>
                            <field name="total_grace_mark" string="Used Grace Mark" readonly="1"/>
                            <field name="active" invisible='1' string="Active" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View Of Exam Information -->
    <record id="view_exam_result_tree" model="ir.ui.view">
        <field name="name">exam.result.tree</field>
        <field name="model">exam.result</field>
        <field name="arch" type="xml">
            <tree>
                <field name="exam_id"/>
                <field name="reg_no"/>
                <field name="roll_no"/>
                <field name="student_id"/>
                <field name="class_id"/>
                <field name="contact_no"/>
                <field name="total"/>
                <field name="percentage"/>
                <field name="result"/>
                <field name="state"/>

            </tree>
        </field>
    </record>

    <record id="exam_result_search" model="ir.ui.view">
        <field name="name">exam.result.search</field>
        <field name="model">exam.result</field>
        <field name="arch" type="xml">
            <search>
                <field name="reg_no"/>
                <field name="student_id"/>
                <field name="father_name"/>
                <field name="contact_no"/>
                <field name="class_id"/>
                <field name="exam_id"/>
                <group expand="0" string="Group By">
                    <filter string="Exam" name="group_exam" context="{'group_by': 'exam_id'}"/>
                    <filter string="Class" name="group_class" context="{'group_by': 'class_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- Actions Of Form, Tree & Kanban Views Of Result Information -->
    <record id="action_exam_result_form" model="ir.actions.act_window">
