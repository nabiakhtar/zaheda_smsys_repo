                                                <td>
                                                    <t t-esc="line.grace_mark"/>
                                                </td>

                                                <td>
                                                    <t t-esc="line.mo2"/>
                                                </td>
                                                <td>50</td>

                                                <td>
                                                    <t t-esc="line.mo1"/>
                                                </td>
                                                <td>50</td>

