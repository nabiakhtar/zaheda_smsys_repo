    <record id="view_mark_slip_form" model="ir.ui.view">
        <field name="name">mark.slip.form</field>
        <field name="model">mark.slip.wiz</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="exam_id" required="1"/>
                        <field name="class_ids" required="1" domain="[('school_id', 'in', school_ids)]"
                               widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="school_ids" required="1" widget="many2many_tags"/>
                    </group>
                </group>


                <footer>
                    <button string="Generate Mark Slip"
                            name="action_create_mark_slip"
                            type="object"
                            class="btn-primary"/>

                    <button string="Print Mark Slips"
                            name="action_print_markslip"
                            type="object"
                            class="btn-warning"/>

                    <button string="Mark Summary"
                            name="action_print_markssummary"
                            type="object"
                            style="background-color:#2D663B"
                            class="btn-warning"/>

                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


