<?xml version="1.0" ?>
<odoo>
    <record id="form_subject_marks_wiz" model="ir.ui.view">
        <field name="name">subject.marks.wiz.form.wizard</field>
        <field name="model">subject.marks.wiz</field>
        <field name="arch" type="xml">
            <form string="Add Marks">
                <group>
                    <group>
                        <field name="exam_id" widget="selection" required="1"/>
                        <field name="exam_term" required="1"/>

                        <field name="section_id" widget="selection" required="1"/>
                    </group>

                    <group>
                        <field name="school_id" required="1"/>
                        <field name="class_id" widget="selection" required="1"/>
                        <field name="subject_id" widget="selection" required="1"/>
                    </group>
                </group>

                <field name="student_marks_ids">
                    <tree editable="bottom" create="false" delete="false">
                        <field name="roll_no" readonly="1" force_save="1"/>
                        <field name="reg_no" readonly="1"/>
                        <field name="student_id" readonly="1" force_save="1"/>
                        <field name="marks"/>
                    </tree>
                </field>
                <footer>
                    <button
                            name="add_marks"
                            string="Add Marks"
                            type="object"
                    />

                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_action_add_marks_form" model="ir.actions.act_window">
        <field name="name">Add Marks</field>
        <field name="res_model">subject.marks.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="form_subject_view_marks_wiz" model="ir.ui.view">
        <field name="name">subject.marks.wiz.form.wizard</field>
        <field name="model">subject.view.marks.wiz</field>
        <field name="arch" type="xml">
            <form string="Add Marks">
                <group>
                    <group>
                        <field name="exam_id" widget="selection" required="1"/>
                        <field name="exam_term" required="1"/>

                        <field name="section_id" widget="selection" required="1"/>
                    </group>

                    <group>
                        <field name="school_id" required="1"/>
                        <field name="class_id" widget="selection" required="1"/>
                        <field name="subject_id" widget="selection" required="1"/>
                    </group>
                </group>

                <field name="student_marks_ids">
                    <tree editable="bottom" create="false" delete="false">
                        <field name="roll_no" readonly="1" force_save="1"/>
                        <field name="reg_no" readonly="1"/>
                        <field name="student_id" readonly="1" force_save="1"/>
                        <field name="marks"/>
                    </tree>
                </field>
                <footer>
                    <button
                            name="add_marks"
                            string="Update Marks"
                            type="object"
                    />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_action_view_marks_form" model="ir.actions.act_window">
        <field name="name">View Marks</field>
        <field name="res_model">subject.view.marks.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="wizard_action_add_marks_form" model="ir.actions.act_window">
